<Page
    x:Class="Calculator.CurrencyCalculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="93" Margin="0,36,0,0" TextWrapping="Wrap" Text="Currency Conversion Calculator" VerticalAlignment="Top" Width="783" FontSize="50" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Height="67" Margin="90,157,0,0" TextWrapping="Wrap" Text="Amount $" VerticalAlignment="Top" Width="296" FontSize="40"/>
        <TextBlock HorizontalAlignment="Left" Height="67" Margin="439,157,0,0" TextWrapping="Wrap" Text="From" VerticalAlignment="Top" Width="286" FontSize="40"/>
        <TextBlock HorizontalAlignment="Left" Height="67" Margin="831,157,0,0" TextWrapping="Wrap" Text="To" VerticalAlignment="Top" Width="186" FontSize="40"/>
        <TextBox Name="amountTextBox" HorizontalAlignment="Left" Height="56" Margin="85,227,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="20" Width="280"/>
        <ComboBox Name="fromComboBox" Height="56" Margin="438,226,0,0" Width="294" FontSize="20">
            <ComboBoxItem Content="US Dollar"/>
            <ComboBoxItem Content="Euro"/>
			<ComboBoxItem Content="British Pound"/>
            <ComboBoxItem Content="Indian Rupee"/>

        </ComboBox>
        <ComboBox Name="toComboBox" Height="55" Margin="831,228,0,0" Width="272" FontSize="20">
            <ComboBoxItem Content="US Dollar"/>
            <ComboBoxItem Content="Euro"/>
			<ComboBoxItem Content="British Pound"/>
            <ComboBoxItem Content="Indian Rupee"/>
        </ComboBox>
        <TextBlock Name="amountFromTextblock" HorizontalAlignment="Left" Height="50" Margin="85,303,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="447" FontSize="20"/>
        <TextBlock Name="convertedTextBlock" HorizontalAlignment="Left" Height="80" Margin="85,360,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="585" FontWeight="Bold" FontSize="40"/>
        <Button Name="conversionButton" Content="Currency conversion" Height="70" Margin="426,526,0,0" VerticalAlignment="Top" Width="334" FontSize="30" Click="conversionButton_Click"/>
        <Button Name="exitButton" Content="Exit" Height="58" Margin="529,631,0,0" VerticalAlignment="Top" Width="128" FontSize="30" Click="exitButton_Click"/>
        <TextBlock Name="conversionRateTextBlock" HorizontalAlignment="Left" Height="94" Margin="90,437,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="453" FontSize="20"/>


    </Grid>
</Page>
